<Window x:Class="PaulSound_ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaulSound_ToDoList"
        mc:Ignorable="d"
        Title="MyToDoList" Height="450" Width="800">
    <Grid>
        <DataGrid FontSize="15" FontWeight="Bold" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Job" IsReadOnly="False" Width="80" Binding="{Binding Path=Job}">
                </DataGridTextColumn>
                <DataGridCheckBoxColumn Header="Done" IsReadOnly="False" Width="80" Binding="{Binding Path=Done}">
                </DataGridCheckBoxColumn>
                <DataGridTextColumn Header="Description" IsReadOnly="False" Width="*" Binding="{Binding Path=Desc}" >
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
